<div class="row">
    <div class="col-xs-12 col-sm-4" style="padding-left:5px; padding-right:0px">
        <div class="widget-box widget-color-blue2">
            <div class="widget-header">
                <h4 class="widget-title lighter smaller">组织架构</h4>
            </div>
            <div class="widget-body">
                <div class="widget-main padding-8">
                    <div treecontrol tree-model="treeData" options="treeOptions" selected-node="selected" on-selection="showSelected(node)">
                        {{node.label}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-8" style="padding-left: 5px; padding-right:5px">
        <div class="widget-box widget-color-blue2">
            <div class="widget-header">
                <h4 class="widget-title lighter smaller" ng-bind="Department"></h4>
            </div>
            <table datatable="ng" dt-options="dtOptions" dt-column-defs="dtColumnDefs" class="table table-striped table-bordered table-hover row-border hover">
                <thead>
                    <tr>
                        <!--<th class="center"></th>-->
                        <th>工号</th>
                        <th>姓名</th>
                        <!--<th>性别</th>-->
                        <th>手机号</th>
                        <th>职位</th>
                        <!--<th>省市区</th>-->
                        <th>状态</th>
                        <!--<th>微信号</th>-->
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="user in Users" ng-class="{'selected': user.selected}">
                        <!--<td class='center'>
                            <label class="pos-rel"><input type='checkbox' class="ace" ng-model="user.selected" /><span class="lbl"></span></label>
                        </td>-->
                        <td ng-bind="user.UserUniqueId"></td>
                        <td><a href='#' ng-bind="user.Name"></a></td>
                        <!--<td>
                            <span ng-if="user.Gender">男</span>
                            <span ng-if="!user.Gender">女</span>
                        </td>-->
                        <td ng-bind="user.Mobile"></td>
                        <td ng-bind="user.Position"></td>
                        <!--<td ng-bind-template="{{user.Country}}-{{user.Province}}-{{user.City}}-{{user.District}}"></td>-->
                        <td>
                            <span ng-if="user.Status == 1" class='label label-sm label-success'>已关注</span>
                            <span ng-if="user.Status == 2" class='label label-sm label-danger'>已禁用</span>
                            <span ng-if="user.Status == 4" class='label label-sm label-warning'>未关注</span>
                        </td>
                        <!--<td ng-bind="user.WeixinId"></td>-->
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>