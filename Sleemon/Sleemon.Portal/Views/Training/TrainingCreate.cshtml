<script type="text/javascript" language="javascript">
    var fileTitle;
    var fileId;

    $(document)
        .ready(function () {
            $('#tempLearning').hide();
            $('#tempExam').hide();
            $('#tempQuestionnaire').hide();
            $('#tempLearningTask').hide();
            $('#tempExamTask').hide();
            $('#tempQuestionnaireTask').hide();

            $('div.widget-main')
                .on('click',
                    '.chooseLearning',
                    function () {
                        fileTitle = $(this).parent().prev();
                        fileId = $(this).parent().next();
                        showModal(1);
                    });

            $('div.widget-main')
                .on('click',
                    '.chooseExam',
                    function () {
                        fileTitle = $(this).parent().prev();
                        fileId = $(this).parent().next();
                        showModal(2);
                    });

            $('div.widget-main')
                .on('click',
                    '.chooseQuestionnaire',
                    function () {
                        fileTitle = $(this).parent().prev();
                        fileId = $(this).parent().next();
                        showModal(3);
                    });

            function showModal(category) {
                var data = {
                    PageIndex: 1,
                    PageSize: 15
                };
                if (category === 1) {
                    $('#myModalLabel')[0].innerText = "选择课程资料";
                    data.TaskCategory = 2;
                } else if (category === 2) {
                    $('#myModalLabel')[0].innerText = "选择试题";
                    data.TaskCategory = 3;
                } else if (category === 3) {
                    $('#myModalLabel')[0].innerText = "选择问卷";
                    data.TaskCategory = 5;
                }

                $.ajax({
                    async: false,
                    type: "GET",
                    url: "/Training/GetTaskItemList",
                    cache: false,
                    data: data,
                    success: function (data) {
                        $(".modal-body").html(data);
                    },
                    error: function (err) {
                        console.log(err);
                    }
                });
            }

            $('#btnSaveItem')
                .click(function () {
                    var item = $("input[name='ItemId']:checked");
                    fileId.val(item.val());
                    fileTitle.val(item.parent().next()[0].innerText);
                });

            $('#btnSave')
                .click(function() {
                    $('#trainingState').val(1);
                    submitForm();
                    return false;
                });

            $('#btnPublish')
                .click(function () {
                    $('#trainingState').val(2);
                    submitForm();
                    return false;
                });

            function submitForm() {
                $.ajax({
                    type: "POST",
                    url: "/Training/TrainingCreate",
                    data: $("#trainingForm").serialize(),
                    cache: false,
                    success: function (data) {
                        $(".col-content").html(data);
                    },
                    error: function (err) {
                        return alert('提交失败');
                    }
                });
            }

            $('div.widget-main')
                .on('click',
                    '.delTaskItem',
                    function() {
                        $(this)
                            .parent()
                            .parent()
                            .siblings('.taskItem')
                            .each(function (i) {
                                $(this).children('.taskItem_index')[0]
                                    .innerText = $(this).children('.taskItem_index')[0].innerText.substring(0, 2) +
                                    (i + 1) +
                                    '：';
                                $(this)
                                    .children()
                                    .children('[name^=Tasks]')
                                    .each(function() {
                                        var start = $(this)[0].name.lastIndexOf('[');
                                        var end = $(this)[0].name.lastIndexOf(']');
                                        $(this)[0].name = $(this)[0].name.substring(0, start + 1) +
                                            i +
                                            $(this)[0].name.substring(end);
                                    });
                            });

                        var choice = $(this).parent().parent()[0];
                        choice.parentNode.removeChild(choice);
                    });

            $('div.widget-main')
                .on('click',
                    '.addLearning',
                    function() {
                        addTaskItem(1, this);
                    });

            $('div.widget-main')
                .on('click',
                    '.addExam',
                    function () {
                        addTaskItem(2, this);
                    });

            $('div.widget-main')
                .on('click',
                    '.addQuestionnaire',
                    function () {
                        addTaskItem(3, this);
                    });

            function addTaskItem(type, obj) {
                var template;

                if (type === 1) {
                    template = $('#tempLearning');
                } else if (type === 2) {
                    template = $('#tempExam');
                } else if (type === 3) {
                    template = $('#tempQuestionnaire');
                }

                if (template) {
                    $(obj).before(template[0].innerHTML);

                    var j = $(obj).siblings('.task_index').children('.taskIndex').val();
                    var i = $(obj).siblings('.taskItem').length;
                    $(obj).prev().children('.taskItem_index')[0]
                        .innerText = $(obj).prev().children('.taskItem_index')[0].innerText + i + '：';

                    $(obj)
                        .prev()
                        .children()
                        .children('[name^=Tasks]')
                        .each(function () {
                            var firstend = $(this)[0].name.indexOf(']');
                            var start = $(this)[0].name.lastIndexOf('[');
                            var end = $(this)[0].name.lastIndexOf(']');
                            
                            $(this)[0].name = 'Tasks[' +
                                j +
                                $(this)[0].name.substring(firstend, start + 1) +
                                (i - 1) +
                                $(this)[0].name.substring(end);
                        });
                }
            }

            $('div.widget-main')
                .on('click',
                    '.delTask',
                    function() {
                        $(this)
                            .parent()
                            .siblings('.task')
                            .each(function(i) {
                                $(this).children('.task_index').children('.taskindex').val(i);
                                $(this)
                                    .children('.task_index')
                                    .children('[name^=Tasks]')
                                    .each(function() {
                                        var end = $(this)[0].name.indexOf(']');
                                        $(this)[0].name = 'Tasks[' +
                                            i +
                                            $(this)[0].name.substring(end);
                                    });

                                $(this)
                                    .children()
                                    .children()
                                    .children('[name^=Tasks]')
                                    .each(function() {
                                        var end = $(this)[0].name.indexOf(']');
                                        $(this)[0].name = 'Tasks[' +
                                            i +
                                            $(this)[0].name.substring(end);
                                    });
                            });

                        var task = $(this).parent()[0];
                        var br = $(this).parent().next()[0];
                        task.parentNode.removeChild(task);
                        br.parentNode.removeChild(br);
                    });

            $('.addLearningTask')
                .click(function () {
                    addTask(1, this);
                });

            $('.addExamTask')
                .click(function () {
                    addTask(2, this);
                });

            $('.addQuestionnaireTask')
                .click(function () {
                    addTask(3, this);
                });

            function addTask(type, obj) {
                var template;

                if (type === 1) {
                    template = $('#tempLearningTask');
                } else if (type === 2) {
                    template = $('#tempExamTask');
                } else if (type === 3) {
                    template = $('#tempQuestionnaireTask');
                }

                if (template) {
                    $('#submitDiv').before(template[0].innerHTML);

                    var i = $(obj).parent().siblings('.task').length;
                    $('#submitDiv').prev().prev().children('.task_index').children('.taskIndex').val(i - 1);
                    $('#submitDiv')
                        .prev()
                        .prev()
                        .children('.task_index')
                        .children('[name^=Tasks]')
                        .each(function() {
                            var end = $(this)[0].name.indexOf(']');
                            $(this)[0].name = 'Tasks[' +
                                (i - 1) +
                                $(this)[0].name.substring(end);
                        });

                    $('#submitDiv')
                        .prev()
                        .prev()
                        .children()
                        .children()
                        .children('[name^=Tasks]')
                        .each(function () {
                            var end = $(this)[0].name.indexOf(']');
                            $(this)[0].name = 'Tasks[' +
                                (i - 1) +
                                $(this)[0].name.substring(end);
                        });
                }
            }

            //封面图片上传
            $('#id-input-file-2').ace_file_input({
                no_file: '请选择图片 ...',
                btn_choose: '选择图片',
                btn_change: '重新选择',
                droppable: false,
                style: 'well',
                thumbnail: 'large',
                before_remove: function () {
                    $('#AvatarPath').val('');
                    return true;
                }
            }).on('change', function () {
                $('#id-input-file-2').wrap("<form id='myupload' action='/EnterpriseNotice/UpLoadImageFile' method='post' enctype='multipart/form-data'></form>");
                $('#myupload').ajaxSubmit({
                    dataType: 'json',
                    success: function (data) {
                        $("#AvatarPathSpan").html(data.Result.Message);
                        $('#AvatarPath').val(data.filePath);
                        //alert(data.Result.Message);
                        $('#id-input-file-2').unwrap();
                    },
                    error: function (xhr) {
                        alert('图片上传失败!');
                        $('#id-input-file-2').unwrap();
                    }
                });
            });
        });
